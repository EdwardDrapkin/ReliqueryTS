{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "paths": {
      "*": ["./*"]
    },
    "target": "es5",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "plugins": [
      {
        "transform": "../src/index.ts"
      }
    ]
  },
  "include": ["./src/**/*.{ts,tsx}"],
  "paths": ["./"]
}
